  //================== hover icon search. header ========================
  document.addEventListener('DOMContentLoaded', function () {
    const searchIcon = document.querySelector('#builderwidget-2\\#0 .uk-first-column .el-item');
    if (!searchIcon) return;
    searchIcon.style.position = 'relative';
    const searchFormHTML = `
        <div class="cloned-search-wrapper">
            <form action="https://www.new.khamphadanang.vn/" method="get" role="search" class="uk-search uk-search-default cloned-search-form">
                <span class="uk-search-icon" uk-search-icon></span>
                <input name="s" type="search" placeholder="VD: Tìm khách sạn Đà Nẵng" class="uk-search-input cloned-search-input" required="" aria-label="Search">
            </form>
        </div>
    `;
    searchIcon.insertAdjacentHTML('beforeend', searchFormHTML);
    const searchWrapper = searchIcon.querySelector('.cloned-search-wrapper');
    searchIcon.addEventListener('mouseenter', function () {
      searchWrapper.classList.add('active');
    });
    searchIcon.addEventListener('mouseleave', function () {
      const input = searchWrapper.querySelector('input');
      if (document.activeElement !== input) {
        searchWrapper.classList.remove('active');
      }
    });
    searchIcon.addEventListener('focusout', function () {
      setTimeout(() => {
        searchWrapper.classList.remove('active');
      }, 200);
    });
  });



/* ===================== search ==========================  */
